<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_can_not_drive"
    android:layout_width="match_parent"
    android:background="@drawable/fuel"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tankup.CanNotDrive">

    <TextView
        android:text="Extra Fuel to Fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:background="#5ce6e9"
        android:textSize="25dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:background="#e0fff0"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_extraFuel"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Required fuel"
        android:textStyle="bold"
        android:background="#5ce6e9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_reqF"
        android:textSize="25dp"
        android:layout_marginTop="14dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:background="#e0fff0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/textView_setRF"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/textView_reqF"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Fill Fuel"
        android:background="#0b7cac"
        android:onClick="fillExtraFuel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_marginBottom="52dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView_extraFuel"
        android:layout_alignStart="@+id/textView_extraFuel" />

    <TextView
        android:text="You can NOT Drive to Destination..."
        android:layout_width="wrap_content"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#ff3366"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView_setRF"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />


</RelativeLayout>
